<h1>Adnat</h1>

<h2><%= current_user.organisation.name %></h2>

<h3>Shifts</h3>

  <table border="2">
    <tr>
      <th>Employee Name</th>
      <th>Shift Date</th>
      <th>Start Time</th>
      <th>Finish Time</th>
      <th>Break Length</th>
      <th>Hours Worked</th>
      <th>Shift Cost</th>
    </tr>
     <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.employee_name %></td>
      <td><%= shift.start %></td>
      <td><%= shift.start %></td>
      <td><%= shift.finish %></td>
      <td><%= shift.break_length %></td>
      <td><%= shift.hours_worked %></td>
      <td><%= shift.shift_cost %></td>
    </tr>
    <% end %>
    <tr>
      <%= form_with model: @shift do |form| %>
        <td><%= form.text_field :employee_name, value: current_user.name, disabled: true %></td>
        <td><%= form.date_field :start %></td>
        <td><%= form.time_field :start %></td>
        <td><%= form.time_field :finish %></td>
        <td><%= form.number_field :break_length %></td>
        <td colspan="2"><%= form.submit %></td>
      <% end %>
    </tr>
  </table>